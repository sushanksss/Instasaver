<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>My Instagram Media</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1>My Instagram Media</h1>
    <p class="subtitle">You are viewing media for @<%= username %>. Click "Download" to save a copy.</p>

    <div class="grid">
      <% if (media.length === 0) { %>
        <p>No media found.</p>
      <% } %>
      <% media.forEach(item => { %>
        <div class="card">
          <% if (item.media_type === 'VIDEO' || item.media_type === 'CAROUSEL_ALBUM') { %>
            <% if (item.thumbnail_url) { %>
              <img src="<%= item.thumbnail_url %>" alt="thumbnail" />
            <% } %>
          <% } else { %>
            <img src="<%= item.media_url %>" alt="media" />
          <% } %>
          <div class="card-body">
            <p class="caption"><%= item.caption ? item.caption.substring(0, 120) : '' %></p>
            <div class="buttons">
              <a class="btn" href="<%= item.media_url %>" download>Download</a>
              <a class="btn outline" href="<%= item.permalink %>" target="_blank" rel="noopener">Open on Instagram</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="actions">
      <a class="btn outline" href="/">Home</a>
      <a class="btn outline" href="/logout">Logout</a>
    </div>
  </div>
</body>
</html>
